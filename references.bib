	journal = {Agronomy 2020, Vol. 10, Page 711},
	author = {Cisneros, Amparo and Fiorio, Peterson and Menezes, Patricia and Pasqualotto, Nieves and van Wittenberghe, Shari and Bayma, Gustavo and Nogueira, Sandra Furlan},
	month = may,
	year = {2020},
	note = {Publisher: Multidisciplinary Digital Publishing Institute},
	keywords = {remote sensing, 2, Sentinel, leaf area index, nitrogen, Panicum, productivity, Urochloa, vegetation indices},
	pages = {711--711},
}

