	author = {Körner, Christian and Möhl, Patrick and Hiltbrunner, Erika},
	year = {2023},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/ele.14260},
	keywords = {climate, plant growth, development, dormancy, phenology, primary production, roots, seasonality, window of opportunity},
	pages = {1277--1292},
	file = {Full Text PDF:/Users/s2255815/Zotero/storage/INVILUU8/Körner et al. - 2023 - Four ways to define the growing season.pdf:application/pdf;Snapshot:/Users/s2255815/Zotero/storage/2DLWB3IR/ele.html:text/html},
