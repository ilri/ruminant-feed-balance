	author = {Inglada, Jordi and Arias, Marcela and Tardy, Benjamin and Hagolle, Olivier and Valero, Silvia and Morin, David and Dedieu, Gèrard and Sepulcre, Guadalupe and Bontemps, Sophie and Defourny, Pierre and Koetz, Benjamin},
	month = sep,
