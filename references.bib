	pages = {1965--1978},
	file = {Hijmans et al. - 2005 - Very High Resolution Interpolated Climate Surfaces for Global Land Areas:/Users/s2255815/Zotero/storage/9EIWP6S3/Hijmans et al. - 2005 - Very High Resolution Interpolated Climate Surfaces for Global Land Areas.pdf:application/pdf},
