	journal = {Animal Production Science},
	author = {Garner, J. B. and Douglas, M. and Williams, S. R. O. and Wales, W. J. and Marett, L. C. and DiGiacomo, K. and Leury, B. J. and Hayes, B. J.},
	month = jun,
	year = {2017},
	note = {Publisher: CSIRO},
	keywords = {Endocrine regulation, heat acclimation, moderate heat stress, stress responses, thermal physiology, thermoregulation},
