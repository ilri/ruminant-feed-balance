	journal = {Animals : an Open Access Journal from MDPI},
	author = {Ali, Asep I. M. and Wassie, Shimels E. and Korir, Daniel and Merbold, Lutz and Goopy, John P. and Butterbach-Bahl, Klaus and Dickhoefer, Uta and Schlecht, Eva},
	month = may,
