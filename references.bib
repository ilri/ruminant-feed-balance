@article{nijbroekSoilOrganicCarbon2018,
	title = {Soil {Organic} {Carbon} {Baselines} for {Land} {Degradation} {Neutrality}: {Map} {Accuracy} and {Cost} {Tradeoffs} with {Respect} to {Complexity} in {Otjozondjupa}, {Namibia}},
