	volume = {14},
	issn = {1751-7311, 1751-732X},
	url = {https://www.cambridge.org/core/journals/animal/article/methodology-for-mapping-current-and-future-heat-stress-risk-in-pigs/737122F9DABE83032ADE4D57B28C6C11},
