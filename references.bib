	note = {Publisher: Proceedings of the National Academy of Sciences},
	pages = {3709--3714},
	file = {Full Text PDF:/Users/s2255815/Zotero/storage/3LFKQHR6/Havlík et al. - 2014 - Climate change mitigation through livestock system.pdf:application/pdf},
