	note = {Publisher: The Royal Society},
	pages = {20121890--20121890},
	file = {Cahill et al. - 2013 - How does climate change cause extinction:/Users/s2255815/Zotero/storage/2H4LMXUV/Cahill et al. - 2013 - How does climate change cause extinction.pdf:application/pdf},
}

